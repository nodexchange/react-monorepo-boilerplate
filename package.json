{
  "name": "react-monorepo-boilerplate",
  "version": "2.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:stephanepericat/react-monorepo-boilerplate.git"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/plugin-transform-react-jsx": "^7.14.9",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@storybook/addon-a11y": "^6.3.7",
    "@storybook/addon-actions": "^6.3.7",
    "@storybook/addon-essentials": "^6.3.7",
    "@storybook/addon-jest": "^6.3.7",
    "@storybook/addon-links": "^6.3.7",
    "@storybook/addon-storyshots": "^6.3.7",
    "@storybook/addon-storyshots-puppeteer": "^6.3.7",
    "@storybook/addon-storysource": "^6.3.7",
    "@storybook/react": "^6.3.7",
    "@washingtonpost/storybook-addon-web-vitals": "^0.1.1",
    "autoprefixer": "^10.3.1",
    "babel-jest": "^27.0.6",
    "babel-loader": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-react": "^7.24.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "jest-styled-components": "^7.0.5",
    "msw": "^0.34.0",
    "msw-storybook-addon": "^1.2.0",
    "plop": "^2.7.4",
    "postcss": "^8.3.6",
    "puppeteer": "^10.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "select-shell": "^1.1.3",
    "shelljs": "^0.8.4",
    "storybook": "^6.3.7",
    "styled-components": "^5.3.0",
    "tailwindcss": "^2.2.7",
    "web-vitals": "^2.1.0"
  },
  "jest": {
    "automock": false,
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/mocks/fileMock.js",
      "\\.(css|less)$": "<rootDir>/mocks/styleMock.js"
    },
    "coverageDirectory": ".jest-coverage",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "transform": {
      "^.+\\.jsx?$": "./node_modules/babel-jest",
      "^.+\\.js?$": "./node_modules/babel-jest"
    },
    "testEnvironment": "jsdom",
    "testRegex": ".*.test.js",
    "verbose": true
  },
  "scripts": {
    "add-package": "plop",
    "build-packages": "yarn workspaces run build",
    "build-storybook": "build-storybook -c .storybook -s public",
    "lint": "eslint packages/**/*.js",
    "menu": "node ./bin/menu.js",
    "postinstall": "husky install",
    "publish-packages": "yarn workspaces run deploy && yarn version --patch",
    "storybook": "start-storybook -p 6006 -s public",
    "test": "jest",
    "test:update": "jest -u",
    "test:visual": "cross-env NODE_ENV=test jest --config packages/jest.config.js",
    "test:generate-output": "jest --json --outputFile=.jest-test-results.json"
  },
  "resolutions": {
    "styled-components": "^5"
  }
}
